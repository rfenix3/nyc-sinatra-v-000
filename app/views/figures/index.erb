
<%@figures.each do |figure| %>

  <h3>Figure: <a href="/figures/<%=figure.id%>"> <%=figure.name%> </a> </h3><br></br>

  <% #binding.pry %>
  <% if !figure.landmarks.empty? %>
    <label> Landmarks: </label>
    <ul>
      <%figure.landmarks.each do |landmark|%>
        <li><%=landmark.name%></li>
      <%end%>
    </ul>
  <%end%>

  <% if !figure.titles.empty? %>
    <label> Titles: </label>
    <ul>
      <%figure.titles.each do |title|%>
        <li><%=title.name%></li>
      <%end%> <!-- figure.titles.each loop -->
    </ul>
  <%end%> <!-- !figure.titles if statement -->

<%end%> <!-- @figures.each loop -->
